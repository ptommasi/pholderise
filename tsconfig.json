{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "exclude": [
        "node_modules",
        "public",
        "dist",
        "data"
    ],
    "lib": ["es2015"]
}


